#########
# Aliases
#########

alias format='echo "ğŸ’… Formatting files with Prettier..." && npx prettier --write --loglevel=error . && echo "âœ… Done formatting"'
alias lint='echo "ğŸ” Linting files with ESLint..." && npx eslint . && echo "âœ… Done linting"'
alias tc='echo "ğŸ§ Type-checking files with TypeScript..." && npx tsc --noEmit && echo "âœ… Done type-checking"'
alias test='echo "ğŸ§ª Testing files with Jest..." && npx jest --coverage=false && echo "âœ… Done testing"'
alias testw='echo "ğŸ§ªğŸ‘€ Testing files with Jest on watch..." && npx jest --watch --coverage=false'
alias va='tc && test && lint && format'
alias vs='tc && lint && format'
# dotfiles repo
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
# Open fzf files with vim by default
alias go="vim -o \`fzf\`"
# Make sure dotfiles are shown by ls
alias ls="ls -A"
alias myip="curl http://ipecho.net/plain; echo"
alias gpom="git pull origin \$(git_main_branch)"

###########
# Functions
###########

# Clears the screen and runs the succeeding command(s)
run() {
  clear;
  eval $@;
}
