#####################################################################
# Shell prompt (robbyrussell-style, inlined)
#####################################################################

# Git prompt for the shell prompt line
function git_prompt_info() {
  local ref
  ref=$(command git symbolic-ref --short HEAD 2>/dev/null) \
    || ref=$(command git describe --tags --exact-match HEAD 2>/dev/null) \
    || ref=$(command git rev-parse --short HEAD 2>/dev/null) \
    || return 0
  local dirty
  if [[ -n $(command git status --porcelain 2>/dev/null | tail -n 1) ]]; then
    dirty="%{$fg[blue]%}) %{$fg[yellow]%}%1{‚úó%}"
  else
    dirty="%{$fg[blue]%})"
  fi
  echo "%{$fg_bold[blue]%}git:(%{$fg[red]%}${ref:gs/%/%%}${dirty}%{$reset_color%} "
}

# Green arrow on success, red on failure + current dir + git info + newline
PROMPT="%(?:%{$fg_bold[green]%}%1{‚ûú%} :%{$fg_bold[red]%}%1{‚ûú%} ) %{$fg[cyan]%}%c%{$reset_color%}"
PROMPT+=' $(git_prompt_info)'
PROMPT+=$'\n'"  "

# Add a blank line between prompts
precmd() {
  echo
}

