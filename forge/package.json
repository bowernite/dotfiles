{
  "name": "forge",
  "version": "1.0.0",
  "description": "Forge CLI - repository validation and service management",
  "type": "module",
  "scripts": {
    "build": "npm run build:all",
    "build:all": "npm run build:slc",
    "build:slc": "bun build --compile --outfile=.build/slc private/slc.ts && mv .build/slc bin/slc && rm -f .*.bun-build",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .build bin/* && mkdir -p bin"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "concurrently": "^8.2.2",
    "execa": "^8.0.1",
    "spinnies": "^0.5.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/spinnies": "^0.5.3",
    "typescript": "^5.3.0"
  }
}
